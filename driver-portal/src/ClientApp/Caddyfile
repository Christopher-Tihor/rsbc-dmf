{
	admin off
}




:2015 {
@blocked {
                client_ip not 142.32.0.0/16
        }
	respond @blocked "Driver Portal is not available." 403

	log {
		format formatted "{request}"
	}
	root * /site 

	header / {
		# Enable HTTP Strict Transport Security (HSTS) to force clients to always connect via HTTPS (do not use if only testing)
		Strict-Transport-Security "max-age=31536000; includeSubDomains"
		# Enable cross-site filter (XSS) and tell browser to block detected attacks
		X-XSS-Protection "1; mode=block"
		# Prevent some browsers from MIME-sniffing a response away from the declared Content-Type
		X-Content-Type-Options "nosniff"
		# Disallow the site to be rendered within a frame (clickjacking protection)
		X-Frame-Options "DENY"
		# Set CSP to support Angular
		Content-Security-Policy "default-src 'self' 'unsafe-eval' https://assets.phsa.ca https://fonts.gstatic.com https://*.gov.bc.ca https://*.bcgov https://localhost:5020; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' 'unsafe-inline' 'unsafe-eval'; frame-src https://phsaehealth-eformsweb.azurewebsites.net; frame-ancestors 'self' https://phsaehealth-eformsweb.azurewebsites.net;"
		# Set referrer policy
		Referrer-Policy "same-origin"
	}

	encode zstd gzip

	route {
		uri strip_prefix /driver-portal
		reverse_proxy /api* {$API_URL}
		try_files {path} {path}/ /index.html?{query}
	}
	
	file_server
}
